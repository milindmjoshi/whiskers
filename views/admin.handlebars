{{#if message}}
<div id="msg" class="alert alert-success msg-width" role="alert">
  {{ message }}
</div>
<br>
{{/if}}
<div class="row login-container">
  <div class="row above-form">
  <div class="col-md-6 form-container">
        <h2 class="admin-title">Add Whiskey(Admin Only)</h2>
        <h5 class="admin-description">Enter a whisky name, description, and select a file to upload</h5>
    <form ref='uploadForm' 
          id='uploadForm' 
          action='http://localhost:3001/api/whiskeys' 
          method='post' 
          encType="multipart/form-data"
          autocomplete="off">
        
        <br>
        <label for="name" class="admin-description">Whisky Name*:</label>
        <br>
        <input type="text" name="name" required>
        <br>
        <label for="description" class="admin-description" >Description:</label>
         <br>
        <textarea name="description" rows="2" cols="50" ></textarea>
        <br>
        <div class="mb-3">
          <label for="formFile" class="admin-description">Select whiskey image file to upload</label>
          <input class="form-control" type="file" id="formFile" name="imageFile">
        </div>
        <br>
        <br>
        <input type='submit' class="btn btn-secondary" value='Submit' />
        <input type="hidden" name="adminId" value="1">
        </form>     
  </div>
</div>
</div>
<script> 
    //Hide the message element after 3 seconds if it exists
    let messageElement = document.getElementById("msg");
    if (messageElement){
      setTimeout(function(){ 
        messageElement.style.display = "none"},2000);
    }
</script>
 