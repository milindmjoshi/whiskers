<div class="card">
  <div class="img-container">
    {{!-- <h5>{{whiskyId}}</h5> --}}
    <img class="card-img-top" src="http://localhost:3001/api/whiskeys/{{whiskyId}}" alt="Card image cap">
  </div>
  <div class="card-body">
    <div class="card-header">
      <h5 class="card-title feed-whiskey-name">{{whiskey.name}}</h5>
      <div class="my-rating-section">
        <h5 class="card-title">Your Rating <span>{{rating}}</span></h5>
        <i class="fas fa-trash-alt trashcan"  style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#deleteRating{{id}}"></i>
      </div>
    </div>

    {{!-- <div class="collapse" id="commentsList"> --}}
      <h5 class="card-title" data-bs-toggle="collapse" href="#commentsList" role="button" aria-expanded="false"
        aria-controls="commentsList">Your Comments:</h5>
      <div class="comment-section">
        <p class="comment-text border">{{comment}}</p>
      </div>
      {{!--
    </div> --}}


  </div>
</div>
<!-- Modal for delete -->
<div class="modal fade" id="deleteRating{{id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete Rating</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete your rating?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="removeRating('{{id}}')">Delete Rating</button>
      </div>
    </div>
  </div>
</div>

